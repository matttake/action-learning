.show.container-fluid
  %p 作品詳細
  .show__top.row
    .col-xl-2.col-lg-3.col-md-4.col-12
      -if @post.image.attached?
        = image_tag @post.image
    .col-xl-10.col-lg-9.col-md-8.col-12
      .show__top__element
        %p#table タイトル:
        %p#date= @post.title
      %hr/
      .show__top__element
        %p#table 出版社:
        %p#date= @post.publisher
      %hr/
      .show__top__element
        %p#table 著者:
        %p#date= @post.author
      %hr/
      .show__top__element
        %p#table 発行日:
        %p#date= @post.issu
      %hr/
      .show__top__element
        %p#table ページ数:
        %p#date= @post.page
      %hr/
      .show__top__element
        %p#table 当たり度:
        %p#date= @post.hit
      %hr/
      .show__top__element
        %p#table 読了日:
        %p#date= @post.read
      %hr/


  .show__main.row
    .show__main__container.col-lg-6.col-12
      %p 要約
      %hr/
      .show__main__container__form
        %p= safe_join(@post.fact.split("\n"),tag(:br))
    .show__main__container.col-lg-6.col-12
      %p 気づき
      %hr/
      .show__main__container__form
        %p= safe_join(@post.perceive.split("\n"),tag(:br))
    .show__main__action.col-12
      %p アクションプラン
      %hr/
      %ul.list-group
        %li.list-group-item.mark= @post.action
        %li.list-group-item.mark= @post.action2
        %li.list-group-item.mark= @post.action3
    .show__main__edit
      =link_to("Edit","/posts/#{@post.id}/edit",  {class:"btn btn-link",role:"button"})
  